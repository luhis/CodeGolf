{
  "private": true,
  "name": "codegolf",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-esm --no-prerender --template ./src/template.html --dest ../../publish/ClientApp/",
    "serve": "preact build && preact serve",
    "dev": "yarn install && preact watch --no-esm  --template ./src/template.html && echo Starting the development server",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "jest ./tests",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/jest": "26.0.7",
    "@types/webpack-env": "1.15.2",
    "enzyme": "3.11.0",
    "enzyme-adapter-preact-pure": "2.2.1",
    "husky": "4.2.5",
    "jest-preset-preact": "1.0.0",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  },
  "dependencies": {
    "@aspnet/signalr": "1.1.4",
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@fortawesome/react-fontawesome": "0.1.11",
    "@monaco-editor/react": "3.3.1",
    "@types/classnames": "2.2.10",
    "@types/lodash.debounce": "4.0.6",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/eslint-plugin-tslint": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "axios": "0.19.2",
    "bulma": "0.9.0",
    "bulma-toast": "2.0.3",
    "classnames": "2.2.6",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "1.0.1",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-functional": "3.0.1",
    "eslint-plugin-prefer-arrow-functions": "3.0.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.4",
    "jest": "26.1.0",
    "lodash.debounce": "4.0.8",
    "markdown-to-jsx": "6.11.4",
    "node-sass": "4.14.1",
    "per-env": "1.0.2",
    "preact": "10.4.6",
    "preact-cli": "3.0.0-rc.14",
    "preact-cli-plugin-env-vars": "1.2.1",
    "preact-render-to-string": "5.1.10",
    "preact-router": "3.2.1",
    "react-ga": "3.1.2",
    "react-google-recaptcha": "2.1.0",
    "sass-loader": "9.0.2",
    "ts-date": "3.0.2",
    "typescript": "3.9.7",
    "typings-for-css-modules-loader": "1.7.0"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/setupTests.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)(spec|test).[jt]s?(x)"
    ],
    "transform": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileTransformer.js"
    },
    "collectCoverage": true
  }
}
