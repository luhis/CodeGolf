{
  "private": true,
  "name": "codegolf",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-esm --no-prerender --template ./src/template.html --dest ../../publish/ClientApp/",
    "serve": "preact build && preact serve",
    "dev": "yarn install && preact watch --no-esm  --template ./src/template.html && echo Starting the development server",
    "lint": "tslint --project .",
    "test": "jest ./tests",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/jest": "24.9.0",
    "@types/webpack-env": "1.15.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-preact-pure": "2.2.0",
    "husky": "4.0.9",
    "jest-preset-preact": "1.0.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "ts-jest": "24.3.0"
  },
  "dependencies": {
    "@aspnet/signalr": "1.1.4",
    "@fortawesome/fontawesome-svg-core": "1.2.26",
    "@fortawesome/free-solid-svg-icons": "5.12.0",
    "@fortawesome/react-fontawesome": "0.1.8",
    "@monaco-editor/react": "3.0.1",
    "@types/classnames": "2.2.9",
    "@types/lodash.debounce": "4.0.6",
    "axios": "0.19.1",
    "bulma": "0.8.0",
    "bulma-toast": "1.5.4",
    "classnames": "2.2.6",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "1.0.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.9.0",
    "lodash.debounce": "4.0.8",
    "markdown-to-jsx": "6.10.3",
    "node-sass": "4.13.0",
    "per-env": "1.0.2",
    "preact": "10.2.1",
    "preact-cli": "3.0.0-rc.7",
    "preact-cli-plugin-env-vars": "1.2.1",
    "preact-render-spy": "1.3.0",
    "preact-render-to-string": "5.1.3",
    "preact-router": "3.1.0",
    "react-ga": "2.7.0",
    "react-google-recaptcha": "2.0.1",
    "sass-loader": "7.3.1",
    "ts-date": "2.3.0",
    "ts-loader": "6.2.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-consistent-codestyle": "1.16.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "4.1.0",
    "typescript": "3.7.4",
    "typings-for-css-modules-loader": "1.7.0"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/setupTests.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)(spec|test).[jt]s?(x)"
    ],
    "transform": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileTransformer.js"
    },
    "collectCoverage": true
  }
}
