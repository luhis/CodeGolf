{
  "private": true,
  "name": "codegolf",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build  --no-prerender --template ./src/template.html --dest ./app/publish/ClientApp/",
    "serve": "preact build && preact serve",
    "dev": "preact watch  --template ./src/template.html && echo Starting the development server",
    "lint": "tslint --project .",
    "test": "jest ./tests",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/jest": "24.0.19",
    "@types/webpack-env": "1.14.1",
    "husky": "1.3.1",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0"
  },
  "dependencies": {
    "@aspnet/signalr": "1.1.4",
    "@fortawesome/fontawesome-svg-core": "1.2.25",
    "@fortawesome/free-solid-svg-icons": "5.11.2",
    "@fortawesome/react-fontawesome": "0.1.7",
    "@types/codemirror": "0.0.79",
    "@types/lodash": "4.14.144",
    "axios": "0.19.0",
    "bulma": "0.8.0",
    "bulma-toast": "1.5.3",
    "codemirror": "5.49.2",
    "copy-webpack-plugin": "5.0.4",
    "css-loader": "1.0.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.9.0",
    "lodash": "4.17.15",
    "markdown-to-jsx": "6.10.3",
    "node-sass": "4.12.0",
    "per-env": "1.0.2",
    "preact": "10.0.1",
    "preact-cli": "3.0.0-rc.6",
    "preact-cli-lodash": "1.1.0",
    "preact-cli-plugin-env-vars": "1.2.1",
    "preact-render-spy": "1.3.0",
    "preact-render-to-string": "5.1.0",
    "preact-router": "3.1.0",
    "react-codemirror2": "6.0.0",
    "react-ga": "2.7.0",
    "react-google-recaptcha": "2.0.1",
    "sass-loader": "7.3.1",
    "ts-loader": "6.2.1",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-consistent-codestyle": "1.16.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-immutable": "6.0.1",
    "tslint-react": "4.1.0",
    "typescript": "3.6.4",
    "typings-for-css-modules-loader": "1.7.0"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)(spec|test).[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
